{
    "id": "nodebb-plugin-cloudstorage",
    "name": "Cloud Storage",
    "description": "Upload and serve images from various cloud storage providers like GitHub Pages, S3 (AWS, Digital Ocean, ...), ImageKit, Cloudinary and more.",
    "url": "https://github.com/june07/nodebb-plugin-cloudstorage",
    "main": "./library.js",
    "hooks": [
        {
            "hook": "filter:error.handle",
            "method": "errorHandler"
        },
        {
            "hook": "static:app.load",
            "method": "staticAppLoad"
        },
        {
            "hook": "filter:uploadImage",
            "method": "filterUploadImage"
        },
        {
            "hook": "filter:admin.header.build",
            "method": "controllers.renderAdminMenu"
        }
    ],
    "staticDirs": {
        "static": "./static"
    },
    "css": [
        "static/css/admin.css"
    ],
    "modules": {
        "../admin/plugins/cloudstorage.js": "static/lib/admin.js"
    },
    "templates": "static/templates"
}